{

  "name": "gsouf/headless-chrome",
  "description": "Control headless chrome instances from php",
  "type": "library",
  "keywords": ["chrome", "browser", "headless"],
  "homepage": "https://github.com/gsouf/headless-chromium-php",
  "license": "Fair",

  "authors": [
    {
      "name": "Soufiane GHZAL",
      "homepage": "https://github.com/gsouf"
    }
  ],

  "autoload":{
    "psr-4" : {
      "HeadlessChromium\\": "src/"
    }
  },

  "autoload-dev":{
    "psr-4" : {
      "HeadlessChromium\\Test\\": "test/suites"
    }
  },

  "require": {
    "php": ">=7.1",

    "symfony/process": "~3.0",
    "wrench/wrench": "^2.0"
  },

  "require-dev":{
    "phpunit/phpunit": "^6.0",
    "squizlabs/php_codesniffer": "^3.1",
    "symfony/var-dumper": "^3.3"
  },

  "scripts": {
    "phpunit": "test/bin/test.bash",
    "test": [
      "@phpunit",
      "@cscheck"
    ],
    "csfix": "test/bin/phpcbf.bash",
    "cscheck": "test/bin/phpcs.bash emacs"
  }
}
